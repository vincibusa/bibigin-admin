rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Products images - allow read for everyone, write for authenticated users only
    match /products/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null; // All authenticated users can upload for now
    }
    
    // Deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}