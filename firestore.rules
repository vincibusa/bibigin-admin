rules_version='2'

service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - users can create and read/write their own profile
    match /users/{userId} {
      // Allow creation during registration (when user is authenticated but document doesn't exist yet)
      allow create: if request.auth != null && request.auth.uid == userId;
      // Allow users to read and update their own profile
      allow read, update: if request.auth != null && request.auth.uid == userId;
      // Allow admins to read/write any user profile
      allow read, write: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Products collection - read by all, write by authenticated users for now
    match /products/{productId} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    // Orders collection - TEMPORARY: allow any authenticated user for development
    match /orders/{orderId} {
      allow read, write: if request.auth != null;
    }
    
    // Customers collection - TEMPORARY: allow any authenticated user for development  
    match /customers/{customerId} {
      allow read, write: if request.auth != null;
    }
    
    // Settings collection - allow authenticated users to read/write store settings
    match /settings/{settingId} {
      allow read, write: if request.auth != null;
    }
    
    // Analytics/Stats collection - read by authenticated users for development
    match /analytics/{document=**} {
      allow read: if request.auth != null;
      allow write: if false; // Analytics should be read-only
    }
    
    // Admin users collection - read/write by authenticated admin users only
    match /admin_users/{userId} {
      allow read, write: if request.auth != null && request.auth.token.admin == true;
    }
    
    // Deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
